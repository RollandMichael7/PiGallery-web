<%= stylesheet_link_tag "welcome", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "lib/speech-bubble", "data-turbo-track": "reload" %>

<div class="my-4 w-100">
	<h1 class="display-4 d-flex align-items-center justify-content-center">
		welcome traveler
	</h1>

	<div class="d-flex align-items-center justify-content-center w-100">
		<div class="d-flex flex-column align-items-center justify-content-center" style="width: <%= browser.device.mobile? ? "90%" : "75%" %>">

			<% @summaries.each do |summary| %>
				<%= render partial: "summary_card", locals: summary %>
			<% end %>
		</div>
	</div>

	<div class="d-flex flex-column align-items-center justify-content-center link-card" data-link="/random">
		<div class="speech-bubble animated">
			<p>
				i cant decide!
			</p>
		</div>
		<div style="margin-top: 2.2rem; margin-right: 15rem">
			<%= fa_icon('crow 3x') %>
		</div>
	</div>	
</div>