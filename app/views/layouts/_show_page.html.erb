<div class="m-4">
	<div class="d-flex flex-column align-items-center">
		<%= render partial: "layouts/index_link", locals: { controller: controller } %>
		<div class="d-flex flex-column align-items-center">
			<h1 class="display-4">
				<%= title %>
			</h1>
			<% if subtitle.present? %>
				<h3 class="fw-light fst-italic text-muted">
					<%= subtitle %>
				</h3>
			<% end %>
		</div>
		<% images.each_with_index do |image, i| %>
			<%= render partial: browser.device.mobile? ? "images/image_card_mobile" : "images/image_card", locals: { 
				image: image, 
				img_on_left: (i % 2 == 0),
				title: image_title_field.present? ? image_title_field.split('.').inject(image, :send) : "",
				subtitle: image_subtitle_field.present? ? image_subtitle_field.split('.').inject(image, :send) : "",
			} %>
		<% end %>
	</div>

	<%= render partial: "layouts/paginator", locals: { objects: images, center: true } %>
</div>
